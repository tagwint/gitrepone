#!/bin/bash

LOCALVIMHIST=${ONTO4_DRCMDHIST:-/tmp}/${HOSTNAME}

if [[ ${1:-NooNxe} =~  ^/tmp/bash-fc\..* ]] 
then 
  # CtrlXCtrE was used
  cat $1 >> /tmp/ctrlXE
elif  [[ ${1:-NooNxe} =~  ^/tmp/editserver/.* ]] 
then
  VIMBAK=${HISTKEEP3:-${LOCALVIMHIST}}.editserver.$(date --iso-8601='seconds')
  cat "${1}" > "${VIMBAK}"
else 
  if [[ ${1:-NooNxe} =~  ^/tmp/tmp\.* ]] 
  then
   :
  else
    VIMHIST=${HISTKEEP3:-${LOCALVIMHIST}}.vimru
    echo "$(date --iso-8601='seconds') ${1:-Nofile}">>${VIMHIST}
  fi
fi

